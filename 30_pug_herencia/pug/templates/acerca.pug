
extends ./layout.pug

block variables
-const page = 5

block  main       
       section#(aMenu[page-1].id})
           header 
               h2=aMenu[4].nombre
               p=aMenu[4].description
            h3 Formulario de contactos
            form(action="")
                +inputGroup('Nombre')
                    input(type="text", name='nombre')
                +inputGroup('Email')
                    input(type="email", name="email")
                +inputGroup('Password')
                    input(type="password", name="password")
                +inputGroup('Comentarios')
                    textarea(name="comentarios", cols="30", rows="10")    
    
        

           
       
        